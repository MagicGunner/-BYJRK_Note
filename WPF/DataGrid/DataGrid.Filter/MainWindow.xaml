<Window x:Class="DataGrid.Filter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:DataGrid.Filter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel Margin="5" Orientation="Horizontal" DockPanel.Dock="Bottom">
                <Button Content="New Employee" Click="ButtonBase_OnClick" />
                <hc:TextBox x:Name="FilterTextBox" Width="200" Margin="5 0 0 0"
                            hc:InfoElement.Placeholder="Filter data by name"
                            InputMethod.IsInputMethodEnabled="False" TextChanged="FilterTextBox_OnTextChanged" />
            </StackPanel>
            <DataGrid Name="DataGrid"
                      d:ItemsSource="{d:SampleData ItemCount=10}"
                      CanUserDeleteRows="False"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="FirstName" Binding="{Binding FirstName}" />
                    <DataGridTextColumn Header="LastName" Binding="{Binding LastName}" />
                    <DataGridTextColumn Header="Birthday" Binding="{Binding Birthday}" />
                    <DataGridTextColumn Header="Salary" Binding="{Binding Salary}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>