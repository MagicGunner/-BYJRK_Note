<Window x:Class="XmlnsDefinitionDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:XmlnsDefinitionDemo"
        xmlns:mb="http://github.com/MissBlue/2025/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <i:Interaction.Behaviors>
        <mb:AutoMaximizeBehavior />
    </i:Interaction.Behaviors>

    <Window.Resources>
        <mb:BindingProxy x:Key="BindingProxy" x:Name="root" Data="{Binding}" />
        <mb:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"></mb:BoolToVisibilityConverter>
    </Window.Resources>

    <Grid>
        <Grid.Resources></Grid.Resources>

        <mb:SimplePanel
            Visibility="{Binding ElementName=Toggle, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">

            <mb:SimplePanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="24"></Setter>
                    <Setter Property="Margin" Value="10"></Setter>
                </Style>
            </mb:SimplePanel.Resources>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="West"></TextBlock>
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="West"></TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Text="West"></TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="West"></TextBlock>
        </mb:SimplePanel>

        <ToggleButton Name="Toggle" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                      IsChecked="True" FontSize="24" Content="Visible">
        </ToggleButton>
    </Grid>
</Window>